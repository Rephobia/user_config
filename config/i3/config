# system init
exec "setxkbmap -layout us,ru -option grp:caps_toggle"
exec --no-startup-id compton -b

# run
bindcode 133 exec dmenu_run
bindsym $mod+Return exec st
bindsym Print exec flameshot gui

# window setting
font pango:DejaVu Sans Mono 9
new_window normal 1 px
for_window [class=".*"] title_format "<b>%class</b>"
for_window [class="st-256color"] title_format "<b>%class</b>"

hide_edge_borders both

set $mod mod1



# Use Mouse+$mod to drag floating windows to their wanted position
floating_modifier mod4

# focus
bindsym Shift+Tab focus left
bindsym $mod+Tab focus right
bindsym $mod+w exec --no-startup-id "python3 ~/.config/i3/toggle_stash.py"
bindsym $mod+Shift+w exec --no-startup-id "python3 ~/.config/i3/toggle_stash_move.py"
bindsym $mod+e exec --no-startup-id "~/.cargo/bin/wmfocus --exit-keys Control_L+g --chars wertdf"


mode "command" {

     bindsym 1 workspace 1
     bindsym 2 workspace 2
     bindsym 3 workspace 3
     bindsym 4 workspace 4
     bindsym 5 workspace 5
     bindsym 6 workspace 6
     bindsym 7 workspace 7
     bindsym 8 workspace 8
     bindsym 9 workspace 9
     bindsym 0 workspace 10

     bindsym Shift1 move container to workspace 1
     bindsym Shift2 move container to workspace 2
     bindsym Shift3 move container to workspace 3
     bindsym Shift4 move container to workspace 4
     bindsym Shift5 move container to workspace 5
     bindsym Shift6 move container to workspace 6
     bindsym Shift7 move container to workspace 7
     bindsym Shift8 move container to workspace 8
     bindsym Shift9 move container to workspace 9
     bindsym Shift0 move container to workspace 10

     # workspace
     bindsym $mod+1 workspace s:1
     bindsym $mod+2 workspace s:2
     bindsym $mod+3 workspace s:3
     bindsym $mod+4 workspace s:4
     bindsym $mod+5 workspace s:5
     bindsym $mod+6 workspace s:6
     bindsym $mod+7 workspace s:7
     bindsym $mod+8 workspace s:8
     bindsym $mod+9 workspace s:9
     bindsym $mod+0 workspace s:10

     bindsym $mod+Shift+1 move container to workspace s:1
     bindsym $mod+Shift+2 move container to workspace s:2
     bindsym $mod+Shift+3 move container to workspace s:3
     bindsym $mod+Shift+4 move container to workspace s:4
     bindsym $mod+Shift+5 move container to workspace s:5
     bindsym $mod+Shift+6 move container to workspace s:6
     bindsym $mod+Shift+7 move container to workspace s:7
     bindsym $mod+Shift+8 move container to workspace s:8
     bindsym $mod+Shift+9 move container to workspace s:9
     bindsym $mod+Shift+0 move container to workspace s:10

     bindsym q exec "i3-nagbar -t warning -m 'You pressed the exit shortcut. Dio you really want to exit i3? This will end your X session.' -b 'Yes, exit i3' 'i3-msg exit'"

     # change focus
     bindsym $mod+i focus up
     bindsym $mod+k focus down
     bindsym $mod+j focus left
     bindsym $mod+l focus right

     bindsym $mod+p focus parent
     bindsym $mod+c focus child
     
     #resize
     bindsym Ctrl+j resize shrink width 5 px or 5 ppt
     bindsym Ctrl+k resize grow height 5 px or 5 ppt
     bindsym Ctrl+i resize shrink height 5 px or 5 ppt
     bindsym Ctrl+l resize grow width 5 px or 5 ppt

     # move focused window
     bindsym $mod+Shift+i move up
     bindsym $mod+Shift+k move down
     bindsym $mod+Shift+j move left
     bindsym $mod+Shift+l move right

     # change container layout (stacked, tabbed, toggle split)
     bindsym a layout tabbed; mode "default"
     bindsym s layout stacking; mode "default"
     bindsym d layout toggle split; mode "default"

     # split in horizontal/vertical orientation
     bindsym h split h; mode "default"
     bindsym v split v; mode "default"

     # toggle tiling / floating
     bindsym f floating toggle; mode "default"

     # change focus between tiling / floating windows
     bindsym Shift+f focus mode_toggle

     bindsym r reload
     bindsym Shift+r restart
     bindsym k kill; mode "default"

     bindsym m fullscreen; mode "default"

     bindsym Return mode "default"
     bindsym Escape mode "default"
     bindsym Ctrl+g mode "default"
     bindsym $mod+grave mode "default"
}

bindsym $mod+grave mode "command"

# scratchpad
bindsym $mod+Shift+minus move scratchpad
bindsym $mod+minus exec "python3 ~/.config/i3/fullscreen_scratchpad.py"

for_window [title="scratchpad" instance="st"] border pixel 3, sticky enable, move scratchpad, resize set 1920 1080, move position 0 0

set $major_text #eeeeec
set $minor_text #555753
set $background #272C2D
set $attention #a40000


# class          border      backgr      text        indicat child_border
client.focused   $background $background $major_text #000000 $background
client.unfocused $background $background $minor_text #000000 $background

bar {
    status_command i3status
    mode dock
    separator_symbol " | "
    workspace_buttons yes

    colors {
           background $background
           statusline #888a85
           separator  $background
	   
           #class             #border     #backgr     #text
           focused_workspace  $background $background $major_text
           active_workspace   #ffffff     #ffffff     $minor_text
           inactive_workspace $background $background $minor_text
           urgent_workspace   $attention  $attention  $major_text
           }
}
